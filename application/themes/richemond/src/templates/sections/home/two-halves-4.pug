                                img(src=require('../../images/icons/entry-schedule.svg') alt)
                            .entry-with-icon__text
                                p Lorem ipsum dolor sit amet
                        .entry-with-icon
                            .entry-with-icon__image
                                img(src=require('../../images/icons/entry-weight.svg') alt)
